#slideshow_title
  %h1= @recipe.title

.slideshow
  - @recipe.recipe_photos.each do |photo|
    = image_tag photo.image.url(:big)

%p#notice= notice

.ingredients
  - @recipe.ingredients.each do |ingredient|
    %p.name= ingredient.name
    %p.amount= ingredient.amount

%div
  %h2 Description:
  %div= @recipe.description

%div
  %h3 Preparation:
  %p= @recipe.preparation
