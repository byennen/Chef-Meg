= form_for([:admin, @recipe], :html => { :multipart => true }) do |f|
  %fieldset
    -if @recipe.errors.any?
      #error_explanation
        %h2= "#{pluralize(@recipe.errors.count, "error")} prohibited this recipe from being saved:"
        %ul
          - @recipe.errors.full_messages.each do |msg|
            %li= msg

    .clearfix
      = f.label :title
      .input
        = f.text_field :title
    - unless f.object.new_record?
      .clearfix
        = f.label ""
        - @recipe.recipe_photos.each do |photo|
          = image_tag photo.image.url(:small)
    .clearfix
      = f.label "Upload Images"
      .input
        = f.fields_for :recipe_photos do |builder|
          = render 'recipe_photo_fields', :f => builder
    .clearfix
      = f.label :ingredients
      .input
        = f.text_area :ingredients, :class => 'xxlarge'
    .clearfix
      = f.label :directions
      .input
        = f.text_area :directions, :class => 'xxlarge'
    .actions
      = f.submit 'Save', :class => 'btn primary'
      = link_to 'Back', admin_recipes_path, :class => 'btn'
